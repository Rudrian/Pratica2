import java.util.Scanner;

public class pratica10n2 {

    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);

        int n, soma = 0;
        int contador = 0;

        System.out.println("Informe os números:");
        while (contador < 10) {
            n = ler.nextInt();
            soma += n; 
            contador++;
            if (contador == 10) {
                break;
            }
        }
        System.out.println("A soma dos números é: " + soma);
        ler.close();
    }
}
