import java.util.Scanner;

public class pratica {

	public static void main(String[] args) {

		Scanner ler = new Scanner(System.in);
		String nomeMaisNovo = "";
		int idadeMaisNova = 0;

		System.out.print("Digite o nome da pessoa 1: ");
		nomeMaisNovo = ler.nextLine();

		System.out.print("Digite a idade da pessoa 1: ");
		idadeMaisNova = ler.nextInt();
		ler.nextLine();

		for (int i = 1; i < 10; i++) {
			System.out.print("Digite o nome da pessoa " + (i + 1) + ": ");
			String nome = ler.nextLine();

			System.out.print("Digite a idade da pessoa " + (i + 1) + ": ");
			int idade = ler.nextInt();
			ler.nextLine();

			if (idade < idadeMaisNova) {
				idadeMaisNova = idade;
				nomeMaisNovo = nome;
			}
		}

		System.out.println("A pessoa mais nova Ã© " + nomeMaisNovo + " com " + idadeMaisNova + " anos.");

		ler.close();
	}
}
